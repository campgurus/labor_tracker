<p id="notice"><%= notice %></p>

<h1>Shift Assignments</h1>

<table>
  <thead>
    <tr>
      <th>Associate</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shifts.each do |shift| %>
      <tr>
        <td><%= link_to (Associate.find_by employee_id: shift.employee_id).full_name, '#' %></td>
        <td><%= Role.find(shift.role_id).name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shift', new_shift_path %>
