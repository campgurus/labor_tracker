<p id="notice"><%= notice %></p>

<h1>Planned Roles</h1>

<table>
  <thead>
    <tr>
      <th>Associate</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @planned_roles.each do |planned_role| %>
      <tr>
        <td><%= Associate.find(planned_role.associate_id).full_name %></td>
        <td><%= Role.find(planned_role.role_id).name %></td>
        <td><%= link_to 'Edit', edit_planned_role_path(planned_role) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Planned Role', new_planned_role_path %>
